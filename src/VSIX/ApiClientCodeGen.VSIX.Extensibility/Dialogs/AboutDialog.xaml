<DataTemplate xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
              xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
              xmlns:vs="http://schemas.microsoft.com/visualstudio/extensibility/2022/xaml">
  <StackPanel Orientation="Vertical" MinWidth="500" Margin="20">
    <TextBlock FontSize="18"
               FontWeight="Bold"
               Margin="0,0,0,10"
               Text="{Binding DisplayName}" />
    
    <TextBlock FontSize="12"
               Margin="0,0,0,5"
               Text="{Binding Description}"
               TextWrapping="Wrap" />
    
    <StackPanel Orientation="Horizontal" Margin="0,10,0,5">
      <TextBlock FontWeight="SemiBold" Text="Version: " />
      <TextBlock Text="{Binding Version}" />
    </StackPanel>
    
    <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
      <TextBlock FontWeight="SemiBold" Text="Publisher: " />
      <TextBlock Text="{Binding Publisher}" />
    </StackPanel>
    
    <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
      <TextBlock FontWeight="SemiBold" Text="Extension ID: " />
      <TextBlock Text="{Binding ExtensionId}" />
    </StackPanel>

    <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
      <TextBlock FontWeight="SemiBold" Text="Support Key: " Width="90" />
      <TextBlock Text="{Binding SupportKey}" Margin="0,0,10,0" />
      <Button Content="Copy" 
              Command="{Binding CopySupportKeyCommand}"
              MinWidth="60"
              Padding="5,2" />
    </StackPanel>
    
    <!-- Description Section -->
    <Border BorderBrush="LightGray" 
            BorderThickness="0,1,0,0" 
            Margin="0,20,0,0" 
            Padding="0,15,0,0">
      <StackPanel>
        <TextBlock FontSize="11"
                   Foreground="Gray"
                   TextWrapping="Wrap">
          Generate REST API client code from OpenAPI/Swagger specifications using various code generators including 
          <Run FontWeight="SemiBold">NSwag</Run>, 
          <Run FontWeight="SemiBold">OpenAPI Generator</Run>, 
          <Run FontWeight="SemiBold">Swagger Codegen</Run>, 
          <Run FontWeight="SemiBold">AutoRest</Run>, 
          <Run FontWeight="SemiBold">Refitter</Run>, and 
          <Run FontWeight="SemiBold">Kiota</Run>.
        </TextBlock>

        <!-- Analytics Section -->
        <TextBlock FontSize="12"
                   FontWeight="SemiBold"
                   Margin="0,20,0,8"
                   Text="Telemetry &amp; Privacy" />
        
        <TextBlock FontSize="11"
                   Foreground="Gray"
                   Margin="0,0,0,10"
                   TextWrapping="Wrap">
          This extension collects errors and tracks feature usages to 
          <Run FontWeight="SemiBold">Exceptionless</Run> and 
          <Run FontWeight="SemiBold">Azure Application Insights</Run> by default. 
          You may opt-out of telemetry collection at any time in the settings.
        </TextBlock>
        
        <TextBlock FontSize="11"
                   Foreground="Gray"
                   Margin="0,0,0,10"
                   TextWrapping="Wrap">
          <Run FontWeight="SemiBold">User tracking is anonymous:</Run> 
          Identification uses a Support Key (shown above) and a generated anonymous identity based on a secure hash algorithm of username@host.
        </TextBlock>
        
        <TextBlock FontSize="11"
                   Foreground="Gray"
                   Margin="0,0,0,5"
                   Text="Tracked user actions:" />
        
        <TextBlock FontSize="11"
                   Foreground="Gray"
                   Margin="15,0,0,5"
                   Text="• Custom Tool executions" />
        
        <TextBlock FontSize="11"
                   Foreground="Gray"
                   Margin="15,0,0,5"
                   Text="• Clicking on &quot;New REST API Client&quot; from the Solution Explorer" />
        
        <TextBlock FontSize="11"
                   Foreground="Gray"
                   Margin="15,0,0,10"
                   Text="• Clicking on &quot;Generate NSwag Studio Output&quot; from the Solution Explorer" />
        
        <TextBlock FontSize="11"
                   FontStyle="Italic"
                   Foreground="Gray"
                   TextWrapping="Wrap">
          The purpose of this telemetry is to understand which features to prioritize and to support users who report issues using their support key.
        </TextBlock>
      </StackPanel>
    </Border>
  </StackPanel>
</DataTemplate>
